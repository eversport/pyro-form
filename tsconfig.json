{
  "compilerOptions": {
    "module": "es2015",
    "moduleResolution": "node",
    "target": "es2017",
    "sourceMap": true,
    "declaration": true,
    "outDir": "./dist",
    "strict": true,
    "jsx": "react",
    "lib": ["es2015", "dom", "es2015.promise", "es2017.object"],
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
