{
  "name": "@eversports/pyro-form",
  "version": "0.0.5",
  "description": "Pyro-Form is a fast and simple form manager that helps you with managing the state of components in a form.",
  "keywords": [
    "forms",
    "react",
    "react-dom",
    "pyro-form",
    "field"
  ],
  "scripts": {
    "build": "tsc",
    "precommit": "yarn build && git add dist && lint-staged",
    "publish-patch": "yarn publish --patch && git push origin master --tags"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "tslint --fix",
      "prettier --parser typescript --write",
      "git add"
    ],
    "*.{js,jsx}": [
      "prettier --parser flow --write",
      "git add"
    ]
  },
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "repository": "https://github.com/eversport/pyro-form.git",
  "author": "Lukas Kuehnert <lukas.kuehnert@gmail.com>",
  "license": "MIT",
  "peerDependencies": {
    "react": "^16.4.1"
  },
  "devDependencies": {
    "@types/react": "^16.4.1",
    "husky": "^0.14.3",
    "lint-staged": "^7.2.0",
    "prettier": "^1.13.5",
    "react": "^16.4.1",
    "tslint": "^5.10.0",
    "tslint-consistent-codestyle": "^1.13.1",
    "tslint-react": "^3.6.0",
    "typescript": "^2.9.2"
  },
  "prettier": {
    "printWidth": 100,
    "useTabs": false,
    "semi": false,
    "singleQuote": true,
    "trailingComma": "es5",
    "bracketSpacing": true,
    "arrowParens": "avoid"
  },
  "dependencies": {}
}
